{{!-- form to create a new blogpost including inputs for title and content --}}
<div class="new-post" id="new-post">
    <h2>Create a new post</h2>
    <form action="/api/blogs" method="POST" class="new-blog-form">
        <label for="title">Title</label>
        <input type="text" name="title" id="blog-title">
        <label for="content">Content</label>
        <input type="text" name="content" id="blog-content">
        <button type="submit">Submit</button>
    </form>
</div>

<style>
  .new-post {
  max-width: 600px;
  margin: 0 auto;
  padding: 40px;
  background: #fff;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
}

.new-post h2 {
  text-align: center;
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 30px;
  color: #333;
}

.new-blog-form label {
  display: block;
  margin-bottom: 10px;
  font-weight: bold;
  color: #333;
}

.new-blog-form input {
  display: block;
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  color: #333;
  margin-bottom: 20px;
}

.new-blog-form button {
  display: inline-block;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  background: #333;
  color: #fff;
  font-size: 16px;
  cursor: pointer;
  transition: background 0.3s;
}

.new-blog-form button:hover {
  background: #111;
}
</style>
