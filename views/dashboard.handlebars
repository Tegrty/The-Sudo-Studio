{{!-- dashboard to display users posts --}}
<div class="welcome">
    <h1>Welcome {{name}}!</h1>
    <h2>Here are your posts:</h2>
</div>
{{!-- styling for welcome --}}
<style>
.welcome {
  max-width: 800px;
  margin: 0 auto;
  padding: 40px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  margin-bottom: 30px;
  text-align: center;
  background-color: #333;
}

.welcome h1 {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #fff;
}

.welcome h2 {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #fff;
}

</style>
{{!-- display each blog post made by the logged in user --}}
{{#each blogs}}
<div id="user-post">
    <h2>{{title}}</h2>
    <h3>Created by: You on {{format_date date_created}}</h3>
    <p>{{content}}</p>
</div>
{{!-- styling for div --}}
<style>
#user-post {
  max-width: 800px;
  margin: 0 auto;
  padding: 40px;
  background: #fff;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  margin-bottom: 30px;
}

#user-post h2 {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #333;
}

#user-post h3 {
  font-size: 16px;
  font-weight: normal;
  margin-bottom: 20px;
  color: #999;
}

#user-post p {
  font-size: 16px;
  line-height: 1.6;
  color: #333;
}

</style>

{{/each}}

{{#if logged_in}}
        {{!-- button to add new blogpost and navigate to api/blogs/post --}}
        <a href="/api/blogs/post" class="add-blog">Add New Blog Post</a>
        
   
        {{!-- styling for button --}}
        <style>
            .add-blog {
                background-color: #333;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                display: block;
                margin-left: auto;
                margin-right: auto;
                margin-top: 5px;
                width: 25%;
            }

            .add-blog:hover {
                background-color: #111;
            }
        </style>
 {{/if}}


